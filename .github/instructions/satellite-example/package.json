{
  "name": "clerk-multidomain-demo",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint --continue",
    "check-types": "turbo run check-types",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "dev:nextjs": "turbo dev --filter=./apps/next.js/*",
    "dev:react": "turbo dev --filter=./apps/react/*",
    "e2e:nextjs": "pnpm --filter nextjs-root-domain e2e",
    "e2e:react": "pnpm --filter react-root-domain e2e",
    "e2e:install:browsers": "pnpm --filter nextjs-root-domain exec playwright install --with-deps && pnpm --filter react-root-domain exec playwright install --with-deps"
  },
  "devDependencies": {
    "@types/node": "^22.17.0",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "eslint": "catalog:",
    "eslint-config-next": "15.5.7",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "catalog:",
    "turbo": "^2.5.5",
    "typescript": "catalog:"
  },
  "packageManager": "pnpm@10.24.0",
  "engines": {
    "node": ">=22"
  },
  "dependencies": {
    "zod": "catalog:"
  }
}
